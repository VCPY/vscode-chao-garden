{
    "name": "vscode-chao-garden",
    "displayName": "vscode-chao-garden",
    "description": "Chao Garden for your VS Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.73.0"
    },
    "publisher": "VCPY",
    "pricing": "Free",
    "categories": [
        "Other"
    ],
    "keywords": [
        "pets",
        "chao",
        "sonic",
        "sonic the hedgehog",
        "pixelart",
        "pixel",
        "vscode"
    ],
    "repository": {
        "type": "github",
        "url": "https://github.com/VCPY/vscode-chao-garden"
    },
    "homepage": "https://github.com/VCPY/vscode-chao-garden",
    "license": "MIT",
    "icon": "icon.png",
    "activationEvents": [
        "onCommand:vscode-chao-garden.start",
        "onCommand:vscode-chao-garden.spawnRandomChao",
        "onCommand:vscode-chao-garden.spawnSpecificChao",
        "onCommand:vscode-chao-garden.deleteChao",
        "onWebviewPanel:chaoCoding",
        "onView:explorer",
        "onView:chaoView",
        "onStartupFinished"
    ],
    "main": "./out/extension/extension.js",
    "browser": "./dist/web/extension-web.js",
    "icon": "icon.png",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "type": "webview",
                    "id": "chaoView",
                    "name": "VS Code Chao Garden",
                    "when": "vscode-chao-garden.position == 'explorer'"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "vscode-chao-garden.spawnSpecificChao",
                    "when": "view == chaoView",
                    "group": "navigation@1"
                },
                {
                    "command": "vscode-chao-garden.spawnRandomChao",
                    "when": "view == chaoView",
                    "group": "navigation@2"
                },
                {
                    "command": "vscode-chao-garden.deleteChao",
                    "when": "view == chaoView",
                    "group": "navigation@3"
                }
            ]
        },
        "commands": [
            {
                "command": "vscode-chao-garden.start",
                "title": "Start Chao coding session",
                "category": "Chao Garden Coding"
            },
            {
                "command": "vscode-chao-garden.spawnRandomChao",
                "title": "Add Random Chao",
                "icon": "$(wand)"
            },
            {
                "command": "vscode-chao-garden.spawnSpecificChao",
                "title": "Add Chao",
                "icon": "$(add)"
            },
            {
                "command": "vscode-chao-garden.deleteChao",
                "title": "Delete Chao",
                "icon": "$(trash)"
            }
        ],
        "configuration": [
            {
                "properties": {
                    "vscode-chao-garden.chaoSize": {
                        "type": "string",
                        "enum": [
                            "small",
                            "medium",
                            "large"
                        ],
                        "default": "medium",
                        "description": "Chao size"
                    },
                    "vscode-chao-garden.position": {
                        "type": "string",
                        "enum": [
                            "explorer"
                        ],
                        "default": "explorer",
                        "description": "VSCode Chao webview position"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile:panel": "webpack",
        "compile:extension": "tsc -p ./tsconfig.extension.json",
        "compile:test": "tsc -p ./tsconfig.test.json",
        "compile:web": "webpack",
        "compile": "npm run compile:panel && npm run compile:extension && npm run compile:test && npm run compile:web",
        "watch": "webpack && tsc -watch -p ./tsconfig.extension.json",
        "watch:web": "webpack --watch",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts && prettier --check src",
        "lint:fix": "eslint src --ext ts --fix && prettier --write src",
        "test": "node ./out/test/runTest.js",
        "test:coverage": "COVERAGE=1 node ./out/test/runTest.js",
        "test:web": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
        "test:gifs": "node ./out/test/gifs.js"
    },
    "devDependencies": {
        "@rbarilani/remove-source-map-url-webpack-plugin": "^1.1.0",
        "@types/glob": "^7.1.3",
        "@types/jsdom": "^20.0.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "@vscode/l10n-dev": "^0.0.29",
        "@vscode/test-web": "^0.0.50",
        "eslint": "^8.18.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "glob": "^8.0.3",
        "gulp": "^5.0.0",
        "jsdom": "^20.0.0",
        "jsdom-global": "^3.0.2",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "path-browserify": "^1.0.1",
        "prettier": "^2.7.1",
        "process": "^0.11.10",
        "ts-loader": "^9.3.0",
        "typescript": "^4.7.4",
        "typescript-eslint": "^0.0.1-alpha.0",
        "vscode-test": "^1.4.0",
        "webpack": "5.95.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "@vscode/l10n": "^0.0.10"
    }
}
